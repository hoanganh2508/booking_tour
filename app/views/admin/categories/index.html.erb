<h1>Tất cả danh mục</h1>
<%= will_paginate %>
  <div class="button-tour">
    <p><%= link_to "Tạo danh mục", new_admin_category_path %></p>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>STT</th>
        <th>Tên</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%#= render @tours %>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to category.name, edit_admin_category_path(category) %></td>
          <td><%= link_to "Xoá", [:admin, category], method: :delete,
                                          data: { confirm: "Bạn có muốn xoá không?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate %>
