<header>
   <!-- header inner -->
   <div class="header">
      <div class="header_white_section">
         <div class="container-fluid">
            <div class="row">
               <div class="col-md-12" style="position: relative;">
                  <div class="header_information" >
                     <ul>
                        <li><%= image_tag "1.png", class: "" %> 145.street road new York</li>
                        <li><%= image_tag "2.png", class: "" %> +71  5678954378</li>
                        <li><%= image_tag "3.png", class: "" %> Demo@hmail.com</li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="container">
         <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
               <div class="full">
                  <div class="center-desk">
                    <div class="logo">
                      <%= link_to root_path do %>
                        <%= image_tag "logo.png", class: "" %>
                      <% end %>
                    </div>
                  </div>
               </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
               <div class="menu-area">
                  <div class="limit-box">
                     <nav class="main-menu">
                        <ul class="menu-area-main">
                           <li> <%= link_to "Home", root_path %> </li>
                           <li> <a href="#about">About</a> </li>
                           <li><%= link_to "Tours", tours_path %></li>
                           <li><a href="#blog">Blog</a></li>
                           <li><a href="#contact">Contact Us</a></li>
                           <li><span id="search-header">Search</span></li>
                            <% if logged_in? %>
                              <li><%= link_to "Users", '#' %></li>
                              <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  Account <b class="caret"></b>
                                </a>

                                <ul class="dropdown-menu">
                                  <li><%= link_to "Profile", current_user %></li>
                                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                                  <li class="divider"></li>
                                  <li>
                                    <%= link_to "Log out", logout_path, method: :delete %>
                                  </li>
                                </ul>
                              </li>
                            <% else %>
                              <li><%= link_to "Log in", login_path %></li>
                            <% end %>
                        </ul>
                     </nav>
                  </div>
               </div>
            </div>
         </div>
         <%= form_tag search_tours_path, :method => 'get', class: "form-search" do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search",class: 'search-homepage' %>
            </p>
          <% end %>
      </div>
   </div>
   <!-- end header inner -->
</header>
<script>
  $('#search-header').click(function() {
    $('.form-search').toggle()
  });
</script>
