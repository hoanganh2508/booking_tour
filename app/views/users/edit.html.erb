<% provide(:title, "Edit user") %>
<% provide(:button_text, 'Save changes') %>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><div class="rounded-circle mt-5"> <%= image_tag @user.display_image if @user.image.attached? %></div><span class="font-weight-bold"><%= @user.name %></span><span class="text-black-50"></span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <%= form_for(@user) do |f| %>
                <div class="row mt-2">
                    <div class="col-md-12"><%= f.label :name %><%= f.text_field :name, class: 'form-control' %></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><%= f.label :email %><%= f.email_field :email, class: 'form-control' %></div>
                    <div class="col-md-12"><%= f.label :phone_number %><%= f.text_field :phone_number, class: 'form-control' %></div>
                    <div class="col-md-12"><%= f.label :password %><%= f.password_field :password, class: 'form-control' %></div>
                    <div class="col-md-12"><%= f.label :password_confirmation %><%= f.password_field :password_confirmation, class: 'form-control' %></div>
                </div>
                <%= f.submit yield(:button_text), class: "mt-5 text-center" %>
                    <span class="image">
                      <%= f.file_field :image %>
                    </span>
                <% end %>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
</div>
</div>
